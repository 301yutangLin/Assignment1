<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tony.newass1.Habit_AddingPage_Activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Habit: "
        android:textSize="25dp"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_habit_Text"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Practice Days"
        android:textSize="25dp"
        android:textAlignment="center"
        android:id="@+id/textView3"
        android:layout_below="@+id/edit_habit_Text"
        android:layout_marginTop="38dp"
        android:layout_alignEnd="@+id/edit_habit_Text"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textSize="25dp"
        android:id="@+id/save_button"
        android:layout_above="@+id/adding_canel_button"
        android:layout_alignEnd="@+id/adding_canel_button"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monday"
        android:textSize="20dp"
        android:id="@+id/Mon_checkBox"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tuesday"
        android:textSize="20dp"
        android:id="@+id/Tue_checkBox"
        android:layout_below="@+id/textView3"
        android:layout_toEndOf="@+id/Mon_checkBox" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wednesday"
        android:id="@+id/Wed_checkBox"
        android:textSize="20dp"
        android:layout_below="@+id/textView3"
        android:layout_toEndOf="@+id/Tue_checkBox" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thursday"
        android:id="@+id/Thu_checkBox"
        android:textSize="20dp"
        android:layout_below="@+id/Mon_checkBox"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Friday"
        android:id="@+id/Fri_checkBox"
        android:textSize="20dp"
        android:layout_below="@+id/Tue_checkBox"
        android:layout_toEndOf="@+id/Thu_checkBox" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saturday"
        android:id="@+id/Sat_checkBox"
        android:textSize="20dp"
        android:layout_below="@+id/Wed_checkBox"
        android:layout_toEndOf="@+id/Fri_checkBox" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sunday"
        android:id="@+id/Sun_checkBox"
        android:textSize="20dp"
        android:layout_below="@+id/Sat_checkBox"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Date :"
        android:id="@+id/date_textView"
        android:textSize="25dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date_editText"
        android:layout_alignTop="@+id/date_textView"
        android:onClick="setDate"
        android:layout_alignStart="@+id/edit_habit_Text"
        android:layout_alignEnd="@+id/Wed_checkBox" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textSize="25dp"
        android:id="@+id/adding_canel_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/date_editText" />


</RelativeLayout>
